<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aryan.android.oyo.HotelActivity_1">
    <ImageView
        android:id="@+id/hotel_img_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/room"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/transparent_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@android:color/transparent"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/oyo_text_1"
                    android:text="KANGAROO ROOMS "
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/room_id_1"
                    android:text="2286"
                    android:textColor="#000"
                    android:layout_toRightOf="@id/oyo_text_1"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hotel_name_1"
                    android:textColor="#000"
                    android:text=" Hotel Bridge"
                    android:layout_toRightOf="@id/room_id_1"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/location_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/oyo_text_1"
                    app:srcCompat="@drawable/ic_map"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hotel_location_1"
                    android:text="Ashram Road Ellisbridge"
                    android:layout_toRightOf="@id/location_img"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:layout_below="@id/oyo_text_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hotel_city_1"
                    android:text=", Ahmedabad"
                    android:textSize="15sp"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@id/location_img"
                    android:layout_below="@id/hotel_location_1"/>
                <TextView
                    android:id="@+id/hotel_rating_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 4.2"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_toRightOf="@id/location_img"
                    android:background="@drawable/left_side_curved_background"
                    android:layout_below="@id/hotel_city_1"
                    />
                <TextView
                    android:id="@+id/hotel_description_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Very Good"
                    android:textColor="#ade13d"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="@drawable/right_side_curved_background"
                    android:layout_below="@id/hotel_city_1"
                    android:layout_toRightOf="@id/hotel_rating_1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rating_count_1"
                    android:text="228"
                    android:textColor="#000"
                    android:textSize="7sp"
                    android:layout_below="@id/hotel_city_1"
                    android:paddingLeft="5dp"
                    android:paddingTop="4sp"
                    android:layout_toRightOf="@id/hotel_description_1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratings_txt_1"
                    android:text="Ratings >"
                    android:textColor="#000"
                    android:textSize="7sp"
                    android:layout_below="@id/hotel_city_1"
                    android:paddingLeft="5dp"
                    android:paddingTop="4sp"
                    android:layout_toRightOf="@id/rating_count_1"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 people booked this hotel in last 6 hours"
                android:textSize="12sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_fire"
                android:layout_marginLeft="20dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/room_facilities_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="#fff">
            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#f3f3f3">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mapi"
                    android:backgroundTint="#f2dc35"
                    android:scaleType="center"
                    android:src="@drawable/ic_star_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f3f3f3"
                    android:layout_gravity="center"
                    android:text="@string/hotel_speciality"
                    android:textSize="12sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/today_txt_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today"
                            android:textColor="#ff0000"
                            android:textSize="15sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 PM"
                            android:gravity="center_vertical"
                            android:layout_below="@id/today_txt_view"
                            android:textColor="#000"
                            android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                            android:drawableTint="#000"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/night_txt_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 NIGHT"
                            android:drawableTop="@drawable/ic_calendar_interface_symbol_tool"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/tomorrow_txt_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tomorrow"
                            android:textColor="#ff0000"
                            android:textSize="15sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11 AM"
                            android:layout_below="@id/tomorrow_txt_view"
                            android:gravity="center_vertical"
                            android:textColor="#000"
                            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                            android:drawableTint="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e5e5e5"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="1 Classic Room, 1 Adult"
                    android:textColor="#ff0000"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:drawableTint="#ff0000"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="20dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount Payable"
                    android:textSize="12sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/room_cost_after_discount_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Rs. 878"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/room_original_cost_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 2751"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/room_cost_after_discount_1"
                    android:background="@drawable/strike_through"
                    android:backgroundTint="#99000000"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:padding="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Dropped(21% Off)"
                        android:layout_marginVertical="5dp"
                        android:textSize="12sp"
                        android:textColor="#000"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Savings Rs. 1105"
                        android:textSize="12sp"
                        android:textColor="#0f992f"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DETAILS"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="#ff0000"/>
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="20dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking for"
                    android:textSize="12sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Rs. 878"
                    android:textColor="#ff0000"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:drawableRight="@drawable/ic_pencil"
                    android:drawableTint="@android:color/holo_red_light"
                    android:drawablePadding="10dp"/>

            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">

                <TextView
                    android:id="@+id/please_read_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLEASE READ"
                    android:textColor="#fff"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="#000"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instruction_one"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_circle"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instruction_two"
                    android:drawableLeft="@drawable/ic_circle"
                    android:textSize="12sp"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guest_policy"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="BOOK ROOM"
                    android:textColor="#fff"
                    android:layout_margin="20dp"
                    android:background="#ff0000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trade_name"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Similar Kangaroo rooms you may like"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#fff"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/similar_oyo_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbar_transparent"
                android:background="@android:color/transparent"
                app:theme="@style/FirstRumTheme1"/>
    </android.support.design.widget.AppBarLayout>
</RelativeLayout>
