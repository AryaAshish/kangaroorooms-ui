<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YouFragment"
    android:background="#e5e5e5">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_you_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:id="@+id/you_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/my_you_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:text="Account"
                    android:padding="20sp"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:text="Profile"
                    android:textSize="15sp"
                    android:padding="20sp"
                    android:textColor="#000"
                    android:drawableLeft="@drawable/ic_profile"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/profile"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e5e5e5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:text="Wallets"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:drawablePadding="10dp"
                    android:padding="20sp"
                    android:drawableLeft="@drawable/ic_wallet"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e5e5e5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:text="Invite and Earn"
                    android:textSize="15sp"
                    android:padding="20sp"
                    android:textColor="#000"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_share_icon"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:text="Need Help?"
                    android:padding="20sp"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:text="FAQ"
                    android:textSize="15sp"
                    android:padding="20sp"
                    android:textColor="#000"
                    android:drawableLeft="@drawable/ic_info"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e5e5e5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:text="Chat with Us"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:drawablePadding="10dp"
                    android:padding="20sp"
                    android:drawableLeft="@drawable/ic_speech_bubble"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e5e5e5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:text="Call Us"
                    android:textSize="15sp"
                    android:padding="20sp"
                    android:textColor="#000"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_phone_call"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:text="Share Feedback"
                android:textSize="15sp"
                android:padding="20sp"
                android:textColor="#000"
                android:drawablePadding="10dp"
                android:background="#fff"
                android:drawableLeft="@drawable/ic_feedback"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="20sp"
                android:background="@drawable/linear_layout_in_activity_first_run_second_background"
                android:text="Logout"
                android:textColor="#000"
                android:gravity="center"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
